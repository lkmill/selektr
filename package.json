{
  "name": "selektr",
  "version": "0.1.1",
  "description": "Text selection library.",
  "main": "lib/selektr.js",
  "jsnext:main": "es/selektr.js",
  "scripts": {
    "clean": "rimraf dist es lib",
    "lint": "eslint src",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "build:commonjs": "BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "BABEL_ENV=es babel src --out-dir es",
    "build:umd": "mkdir -p dist && BABEL_ENV=es rollup -c -o dist/selektr.js",
    "build:umd:min": "mkdir -p dist && BABEL_ENV=es rollup -c | uglifyjs -c -m > dist/selektr.min.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm run clean && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lohfu/selektr.git"
  },
  "keywords": [
    "DOM",
    "range",
    "selection"
  ],
  "author": "Linus Miller <lohfu@lohfu.io> (lohfu@lohfu.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lohfu/selektr/issues"
  },
  "homepage": "https://github.com/lohfu/selektr#readme",
  "dependencies": {
    "dollr": "0.0.7",
    "lodash": "^4.13.1",
    "lodash-es": "^4.13.1"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "eslint": "^2.10.2",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.8.0",
    "rimraf": "^2.5.2",
    "rollup": "^0.26.3",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-node-resolve": "^1.5.0",
    "uglify-js": "^2.6.2"
  }
}
