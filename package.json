{
  "name": "selektr",
  "version": "0.2.1",
  "description": "Text selection library.",
  "main": "lib/index",
  "module": "lib/index.mjs",
  "scripts": {
    "clean": "rimraf dist lib",
    "lint": "eslint --ext .js --ext .mjs src",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:umd:min",
    "build:cjs": "BABEL_ENV=cjs babel src --source-maps --out-dir lib",
    "build:esm": "BABEL_ENV=esm babel src --source-maps --keep-file-extension --out-dir lib",
    "build:umd": "BABEL_ENV=umd rollup -c",
    "build:umd:min": "BABEL_ENV=umd rollup -c ./rollup.config.minify.js",
    "prepublish": "npm run clean && npm run lint && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lohfu/selektr.git"
  },
  "keywords": [
    "DOM",
    "range",
    "selection"
  ],
  "author": "Linus Miller <lohfu@lohfu.io> (lohfu@lohfu.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lohfu/selektr/issues"
  },
  "homepage": "https://github.com/lohfu/selektr#readme",
  "dependencies": {
    "@domp/children": "^0.4.0",
    "@domp/closest": "^0.3.0",
    "@domp/is": "^0.3.0",
    "descendants": "^0.1.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-plugin-add-module-exports": "^1.0.2",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.11.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-uglify": "^6.0.2"
  }
}
